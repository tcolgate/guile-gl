(use-modules (GL opengl))

(define renderScene 
  (lambda ()
    (glClear (GL-COLOR-BUFFER-BIT))
    (glBegin (GL-TRIANGLES))
      (glVertex3f -0.5 -0.5 0.0)
      (glVertex3f 0.5 0.0 0.0)
      (glVertex3f 0.0 0.5 0.0)
    (glEnd)
    (glFlush)
    (glutSwapBuffers)))

(define reshapeFunc
  (lambda (x y)
    (display "Reshape called with ")
    (display x)
    (display " ")
    (display y)
    (newline)))

(define mymouseFunc
  (lambda (x y z b)
    (display "Mousefunc called with ")
    (display x)
    (display " ")
    (display y)
    (display " ")
    (display z)
    (display " ")
    (display b)
    (newline)))

(define mykeybFunc
  (lambda (k y z )
    (display "Keyfunc called with ")
    (display k)
    (display " ")
    (display y)
    (display " ")
    (display z)
    (newline)))

(define argcp (newintv1 1))
(define argvp (newstrv1 "tester"))
(glutInit argcp argvp)

#(glutIdleFunc myIdle)

(glutInitDisplayMode (logior (GLUT-DOUBLE) (GLUT-DEPTH) (GLUT-RGBA) ))
(glutInitWindowPosition 100 100)
(glutInitWindowSize 320 320)
(glutCreateWindow "3D Tech- GLUT Tutorial")
(glutDisplayFunc renderScene)
(glutReshapeFunc reshapeFunc)
(glutInitWindowSize 160 160)
(glutCreateWindow "AnotherWindow")
(glutDisplayFunc renderScene)
(glutMouseFunc mymouseFunc)
(glutKeyboardFunc mykeybFunc)

(glutMainLoop)


